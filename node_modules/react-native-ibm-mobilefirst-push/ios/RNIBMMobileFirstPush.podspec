
Pod::Spec.new do |s|
  s.name         = "RNIBMMobileFirstPush"
  s.version      = "8.0.2019010203"
  s.summary      = "RNIBMMobileFirstPush"
  s.description  = "RNIBMMobileFirstPush is bridge for a React Native app to IBM Mobile First Native Push iOS SDK"
  s.homepage     = ""
 # s.license      = "IBM"
  s.author             = { "author" => "IBM" }
  s.homepage     = "https://github.ibm.com/MobileFirst/mfp-react-native"

  s.platform     = :ios, "9.0"
  s.source = {:path=>'.' }
  s.source_files  = "*.{h,m}"
  s.requires_arc = true


  s.dependency "React"
  s.dependency "IBMMobileFirstPlatformFoundationPush"

s.subspec 'RNMFPPush' do |ss|
    ss.preserve_paths = 'include/*.h'
    ss.vendored_libraries = 'lib/libRNMfpPushPlugin.a'
    ss.libraries = 'RNMfpPushPlugin'
    ss.xcconfig = { 'HEADER_SEARCH_PATHS' => "${PODS_ROOT}/#{s.name}/include/**" }
    ss.dependency "IBMMobileFirstPlatformFoundationPush"
end
end
