echo "Copying MobileFirst configuration file for iOS"
set PLUGIN_DIR= %cd%
set BASE_DIR= %cd%\..\..
echo "Plugin dir is " %PLUGIN_DIR%
echo "Base dir is " %BASE_DIR%

find /c "include ':react-native-pushbridge'" %BASE_DIR%\android\settings.gradle
if %errorlevel% equ 1 goto notfound
    echo "Skipping copying of internal dependencies"
    goto done
:notfound
    echo "Adding internal dependencies"
    copy /b %BASE_DIR%\android\settings.gradle + scripts\bridge.settings %BASE_DIR%\android\settings.gradle
:done

echo "React-Native IBM MFP Push post-installation complete"